{
    "name": "typo3/neos-typo3-org-distribution",
    "description" : "neos.typo3.org Distribution",
    "license": "GPL-3.0+",
    "repositories": [
        {
            "type": "git",
            "url": "git://git.typo3.org/Packages/NeosTypo3Org.git"
        }
    ],
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "typo3/neos": "1.2.*@beta",
        "typo3/neostypo3org": "@dev",
        "typo3/neos-nodetypes": "1.2.*@beta",

        "typo3/doctools": "dev-master",
        "robertlemke/plugin-blog": "dev-master",
        "timkandel/packagistfe": "dev-master",

        "robertlemke/rss": "@dev",
        "doctrine/migrations": "@dev",
        "typo3/release": "dev-master",
        "typo3/neos-kickstarter": "1.2.*@beta",
        "typo3/flow": "2.3.*@beta",
        "typo3/typoscript": "@beta",
        "typo3/typo3cr": "@beta",
        "typo3/media": "@beta",
        "typo3/eel": "@beta",
        "typo3/fluid": "@beta",
        "typo3/party": "@beta",
        "typo3/kickstart": "@beta",
        "flowpack/elasticsearch-contentrepositoryadaptor": "@dev"
    },
    "require-dev": {
        "typo3/buildessentials": "2.3.*@beta",
        "mikey179/vfsstream": "1.4.*",
        "phpunit/phpunit": "4.3.*"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
