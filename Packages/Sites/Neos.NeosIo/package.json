{
  "name": "neos-io",
  "version": "0.0.1",
  "description": "Neos.io site package",
  "author": "Neos Team",
  "scripts": {
    "prebuild:modernizr": "modernizr -c node_modules/modernizr/lib/config-all.json",
    "build:modernizr": "customizr -c Build/Modernizr.config.json",
    "postbuild:modernizr": "rm modernizr.js & uglify -s Resources/Public/JavaScript/Modernizr.min.js -o Resources/Public/JavaScript/Modernizr.min.js",
    "build:scripts": "browserify -t [ babelify ] -p browserify-derequire Resources/Private/JavaScript/index.js > Resources/Private/JavaScript/Bundle.min.js",
    "fix:amd": "fandr Resources/Public/JavaScript/Bundle.min.js '{\"&& define.amd\": \"&& false\"}'",
    "build:sass": "node-sass Resources/Private/Scss/ -o Resources/Public/Styles/",
    "postbuild:sass": "postcss --use autoprefixer Resources/Public/Styles/*.css -d Resources/Public/Styles/",
    "build": "npm run build:scripts && npm run build:sass && npm run build:modernizr && npm run fix:amd",
    "minify:scritpts": "uglify -s Resources/Public/JavaScript/Bundle.min.js -o Resources/Public/JavaScript/Bundle.min.js",
    "minify:styles": "uglify -s Resources/Public/Styles/Main.css -o Resources/Public/Styles/Main.css -c",
    "minify": "npm run minify:scritpts && npm run minify:styles",
    "lint:scripts": "eslint --parser babel-eslint Resources/Private/JavaScript/**",
    "lint": "npm run lint:scripts",
    "watch:scripts": "watchify -v -t [ babelify ] Resources/Private/JavaScript/index.js -o Resources/Public/JavaScript/Bundle.min.js",
    "watch:sass": "npm run build:sass -- -w",
    "watch": "npm run watch:scripts & npm run watch:sass",
    "test": "npm run lint"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-derequire": "^0.9.4",
    "customizr": "^1.0.0-alpha",
    "eslint": "^2.4.0",
    "eslint-config-xo": "^0.10.1",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-react": "^3.16.1",
    "find-and-replace-cli": "^0.1.1",
    "modernizr": "^3.3.1",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.5.1",
    "uglify": "^0.1.5",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@reduct/assembler": "^2.0.4",
    "@reduct/component": "^4.1.1",
    "@reduct/nitpick": "^3.0.0",
    "babel-polyfill": "^6.5.0",
    "lodash.debounce": "^4.0.3",
    "raf": "^3.2.0"
  }
}
